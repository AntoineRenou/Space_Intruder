<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.antoinerenou.findintruder.SettingsActivity"
    android:background="@drawable/background">


    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView3"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="@drawable/headermini"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Number of entities"
            android:id="@+id/textView4"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:paddingTop="15dp" />

        <NumberPicker
            android:layout_width="178dp"
            android:layout_height="100dp"
            android:id="@+id/numberPicker"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Icon"
            android:id="@+id/textView8"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:paddingTop="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:gravity="center" >

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/icon1"
                android:background="@drawable/spaceinvader1"
                android:layout_marginRight="5dp"
                android:onClick="getIconResource"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/icon2"
                android:background="@drawable/spaceinvader2"
                android:layout_marginRight="5dp"
                android:onClick="getIconResource"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/icon3"
                android:background="@drawable/spaceinvader3"
                android:layout_marginRight="5dp"
                android:onClick="getIconResource"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/icon4"
                android:background="@drawable/spaceinvader4"
                android:layout_marginRight="5dp"
                android:onClick="getIconResource"
                android:layout_marginLeft="5dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Color"
            android:id="@+id/textView6"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:paddingTop="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:gravity="center" >

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/textView5"
                android:background="@android:color/holo_red_dark"
                android:layout_marginRight="5dp"
                android:onClick="getColorResource"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/textView12"
                android:background="@android:color/holo_orange_light"
                android:layout_marginRight="5dp"
                android:onClick="getColorResource"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/textView20"
                android:background="@android:color/holo_green_light"
                android:layout_marginRight="5dp"
                android:onClick="getColorResource"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/textView21"
                android:background="@android:color/holo_blue_bright"
                android:layout_marginRight="5dp"
                android:onClick="getColorResource"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/textView22"
                android:background="@android:color/holo_purple"
                android:layout_marginRight="5dp"
                android:onClick="getColorResource"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/textView23"
                android:background="@android:color/white"
                android:layout_marginRight="5dp"
                android:onClick="getColorResource"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Speed"
            android:id="@+id/textView27"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:paddingTop="15dp" />

        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:id="@+id/seekBar"
            android:layout_row="8"
            android:layout_column="0" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:id="@+id/button7"
            android:layout_row="10"
            android:layout_column="0"
            android:background="#2487d8"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:onClick="displayHomeActivity"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" />

    </GridLayout>

</RelativeLayout>
